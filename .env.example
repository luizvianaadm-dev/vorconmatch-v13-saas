# VorconMatch V13 - Environment Variables
# Copy this file to .env.local and fill in your values

# ========== SUPABASE ==========
NEXT_PUBLIC_SUPABASE_URL=https://sfqwyzcwukyquhxvugsd.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ========== ASAAS (Payment Gateway) ==========
# Get these from: https://dashboard.asaas.com/settings/api
ASAAS_API_KEY=your_asaas_api_key_here
ASAAS_ENV=sandbox  # Use 'sandbox' for testing or 'production' for live
ASAAS_WEBHOOK_SECRET=your_webhook_secret_here

# ========== PAYMENT LINKS (Asaas Checkout Links) ==========
# Generate these links in Asaas dashboard under Checkout Links
NEXT_PUBLIC_PAYMENT_LINK_STARTER=https://www.asaas.com/c/STARTER_LINK_ID
NEXT_PUBLIC_PAYMENT_LINK_PRO=https://www.asaas.com/c/PRO_LINK_ID
NEXT_PUBLIC_PAYMENT_LINK_ELITE=https://www.asaas.com/c/ELITE_LINK_ID

# ========== APPLICATION SETTINGS ==========
NEXT_PUBLIC_APP_URL=https://app.vorcon.com.br
NODE_ENV=development  # development, staging, production

# ========== SECURITY ==========
JWT_SECRET=your_jwt_secret_here_min_32_chars_long!!!
ENCRYPTION_KEY=your_encryption_key_here_32_chars_long!!!!

# ========== EMAIL (Optional - for notifications) ==========
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_FROM=noreply@vorcon.com.br

# ========== LOGGING ==========
LOG_LEVEL=info  # debug, info, warn, error
ENABLE_API_LOGGING=true
